@model RegisterViewModel
@{
    ViewBag.Titel = "Registrera en ny kund";
}
<h1>Registrera</h1>
<div asp-validation-summary="All" class="text-danger"></div>
<form method="post" asp-action="Register">
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Användarnamn: </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="AnvandarNamn" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Lösenord: </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Losenord" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Bekräfta lösenord: </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="BekraftaLosenord" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Registrera</button>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-4">
            <label asp-for="IsPrivate" class="d-block">Gör profilen privat</label>
            <input type="checkbox" asp-for="IsPrivate" title="Gör profilen privat" class="form-check" />
            <span asp-validation-for="IsPrivate" class="text-danger"></span>
        </div>
    </div>

</form>
