@model Message

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<div class="card shadow-sm">
    <div class="card-body">
        <form method="post" asp-action="CreateMessage" asp-controller="Message">
            <input type="hidden" asp-for="ReceiverId" value="@Model.ReceiverId" />

            @if (User.Identity.IsAuthenticated)
            {
                <div class="form-group mb-3">
                    <label asp-for="SenderName">Ditt Namn (Inloggad)</label>
                    <input asp-for="SenderName" class="form-control" readonly />
                </div>
            }
            else
            {
                <div class="form-group mb-3">
                    <label asp-for="SenderName">Ditt Namn (Gäst)</label>
                    <input asp-for="SenderName" class="form-control" placeholder="Skriv ditt namn" />
                    <span asp-validation-for="SenderName" class="text-danger"></span>
                </div>
            }

            <div class="form-group mb-3">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" rows="4" placeholder="Skriv ditt meddelande här"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Skicka</button>
        </form>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Index" asp-controller="Home" class="btn btn-link text-secondary">
        Tillbaka till Startsidan
    </a>
</div>

