@model Grupp23_CV.Models.Project

@{
    ViewData["Title"] = "Skapa Projekt";
}

<h2>Skapa Projekt</h2>

<form asp-controller="Project" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" id="projectTitle" placeholder="Ange projektnamn" />
        <span asp-validation-for="Title" class="text-danger"></span>
        
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" id="projectDescription" rows="3" placeholder="Ange beskrivning"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Skapa Projekt</button>
</form>
