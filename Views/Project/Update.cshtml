@model Grupp23_CV.Models.Project

<form id="editForm" method="post">
    <input type="hidden" id="editProjectId" name="ProjectId" value="@Model.ProjectId" />
   
    <div class="form-group">
        <label for="editTitle">Titel</label>
        <input type="text" id="editTitle" name="Title" class="form-control" value="@Model.Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
       
    </div>
    <div class="form-group">
        <label for="editDescription">Beskrivning</label>
        <textarea id="editDescription" name="Description" class="form-control">@Model.Description</textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Spara</button>
    <button type="button" class="btn btn-secondary" onclick="location.href='/Project/Index'">Avbryt</button>
  
</form>
