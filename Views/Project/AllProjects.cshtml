@model IEnumerable<Grupp23_CV.Models.Project>

<h2>Alla Projekt</h2>

@if (TempData["JoinMessage"] != null)
{
    <div class="alert alert-info">
        @TempData["JoinMessage"]
    </div>
}

@if (!Model.Any())
{
    <p>Det finns inga projekt att visa just nu.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Projektnamn</th>
                <th>Beskrivning</th>
                <th>Skapare</th> 
                <th>Medlemmar</th>
                @if (User.Identity.IsAuthenticated)
                {
                    <th>Delta i projekt</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.Title</td>
                    <td>@project.Description</td>
                    <td>
                        @* Visa projektets skapare *@
                        @if (project.UserProjects.Any(up => up.User.IsPrivate && !User.Identity.IsAuthenticated))
                        {
                            <span>Endast synligt för inloggade användare</span>
                        }
                        else
                        {
                            var creator = project.UserProjects.FirstOrDefault()?.User;
                            if (creator != null)
                            {
                                <span>@creator.UserName</span>
                            }
                        }
                    </td>
                    <td>
                        @* Visa endast offentliga användare eller privata användare om inloggad *@
                        @foreach (var userProject in project.UserProjects)
                        {
                            if (!userProject.User.IsPrivate || User.Identity.IsAuthenticated)
                            {
                                <span>@userProject.User.UserName</span>

                                <br />
                            }
                        }
                    </td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <td>
                            <form asp-action="JoinProject" method="post">
                                <input type="hidden" name="id" value="@project.ProjectId" />
                                <input type="hidden" name="redirectTo" value="AllProjects" />
                                <button type="submit" class="btn btn-success">Gå med i projekt</button>
                            </form>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
