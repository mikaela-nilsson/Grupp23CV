@model Grupp23_CV.Models.CV

@{
	ViewBag.Title = "Skapa CV";
}

<h1>Skapa CV</h1>

<form method="post" enctype="multipart/form-data" asp-action="Create">
	<div class="form-group">
		<label asp-for="FullName">Fullständigt namn</label>
		<input type="text" asp-for="FullName" class="form-control" />
		<span asp-validation-for="FullName" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Adress">Adress</label>
		<input type="text" asp-for="Adress" class="form-control" />
		<span asp-validation-for="Adress" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="PhoneNumber">Telefonnummer</label>
		<input type="text" asp-for="PhoneNumber" class="form-control" />
		<span asp-validation-for="PhoneNumber" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label for="profileImage">Profilbild</label>
		<input type="file" name="profileImage" class="form-control" />
	</div>

	<button type="submit" class="btn btn-primary">Nästa</button>
</form>
