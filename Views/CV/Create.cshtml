@model Grupp23_CV.Models.CV

@{
	ViewBag.Title = "Skapa CV";
}

<h1>Skapa CV</h1>

<form method="post" enctype="multipart/form-data">
	<div class="form-group">
		<label for="FullName">Fullständigt namn</label>
		<input type="text" asp-for="FullName" class="form-control" />
	</div>

	<div class="form-group">
		<label for="Adress">Adress</label>
		<input type="text" asp-for="Adress" class="form-control" />
	</div>

	<div class="form-group">
		<label for="PhoneNumber">Telefonnummer</label>
		<input type="text" asp-for="PhoneNumber" class="form-control" />
	</div>

	<div class="form-group">
		<label for="ProfileImage">Profilbild</label>
		<input type="file" asp-for="ProfileImagePath" class="form-control" />
	</div>

	<div class="form-group">
		<label>Kompetens</label>
		<input type="text" name="Skills[0].SkillName" class="form-control" placeholder="Kompetens 1" />
		<input type="text" name="Skills[1].SkillName" class="form-control" placeholder="Kompetens 2" />
	</div>

	<div class="form-group">
		<label>Utbildning</label>
		<input type="text" name="Educations[0].InstitutionName" class="form-control" placeholder="Utbildning 1" />
		<input type="text" name="Education[1].InstitutionName" class="form-control" placeholder="Utbildning 2" />
	</div>

	<div class="form-group">
		<label>Erfarenhet</label>
		<input type="text" name="Experiences[0].CompanyName" class="form-control" placeholder="Erfarenhet 1" />
		<input type="text" name="Experiences[1].CompanyName" class="form-control" placeholder="Erfarenhet 2" />
	</div>

	<button type="submit" class="btn btn-primary">Skapa CV</button>
</form>
