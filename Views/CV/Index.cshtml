@model CV

<h1>@((Model.UserId == (ViewBag.CurrentUserId as int?) ? "Ditt CV" : "Användarens CV"))</h1>

@if (Model != null)
{
    <div class="cv-card">
        <div class="cv-header">
            <h2>@Model.FullName</h2>
            <p><strong>Adress:</strong> @Model.Adress</p>
            <p><strong>Telefonnummer:</strong> @Model.PhoneNumber</p>
        </div>
        <div class="cv-body">
            <div class="profile-image">
                @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                {
                    <img src="@Model.ProfileImagePath" alt="Profilbild" />
                }
                else
                {
                    <p>Ingen bild</p>
                }
            </div>
            <div class="cv-sections">
                <div class="cv-education">
                    <h3>Utbildning</h3>
                    <ul>
                        @foreach (var edu in Model.Educations)
                        {
                            <li>@edu.Name</li>
                        }
                    </ul>
                    @if (User.Identity.IsAuthenticated && Model.UserId == (ViewBag.CurrentUserId as int?))
                    {
                        <a href="@Url.Action("CreateEducation", "CV", new { cvId = Model.Id })" class="btn btn-primary">Lägg till utbildning</a>
                    }
                </div>
                <div class="cv-experience">
                    <h3>Erfarenhet</h3>
                    <ul>
                        @foreach (var exp in Model.Experiences)
                        {
                            <li>@exp.JobTitle</li>
                        }
                    </ul>
                    @if (User.Identity.IsAuthenticated && Model.UserId == (ViewBag.CurrentUserId as int?))
                    {
                        <a href="@Url.Action("CreateExperience", "CV", new { cvId = Model.Id })" class="btn btn-primary">Lägg till erfarenhet</a>
                    }
                </div>
                <div class="cv-skills">
                    <h3>Kompetens</h3>
                    <ul>
                        @foreach (var skill in Model.Skills)
                        {
                            <li>@skill.Name</li>
                        }
                    </ul>
                    @if (User.Identity.IsAuthenticated && Model.UserId == (ViewBag.CurrentUserId as int?))
                    {
                        <a href="@Url.Action("CreateSkill", "CV", new { cvId = Model.Id })" class="btn btn-primary">Lägg till kompetens</a>      
                    }
                </div>
            </div>
        </div>

        @if (Model.UserId == (ViewBag.CurrentUserId as int?)) //Visar knappar för att göra ändringar/ta bort om det är inloggade användarens CV
        {
            <div class="cv-actions">
                <a href="@Url.Action("Edit", "CV", new { id = Model.Id })" class="btn btn-warning">Redigera</a>
                <a href="@Url.Action("ChangePassword", "Account")" class="btn btn-warning">Ändra Lösenord</a>
                <a href="@Url.Action("Delete", "CV", new { id = Model.Id })" class="btn btn-danger">Ta bort</a>
            </div>
        }
        else
        {
            <div class="cv-actions">
                <a asp-action="CreateMessage" asp-controller="Message" asp-route-receiverId="@Model.UserId" class="btn btn-primary">Skicka meddelande</a>
            </div>
        }
    </div>
}
else
{
    <p>Du har inget CV än. <a href="@Url.Action("Create", "CV")" class="btn btn-primary">Skapa ett CV</a></p>
}

<style>
    .cv-list {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .cv-card {
        background: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        width: 100%;
        max-width: 600px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .cv-header h2 {
        margin: 0 0 10px;
    }

    .cv-header p {
        margin: 5px 0;
    }

    .profile-image img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 50%;
    }

    .cv-sections h3 {
        margin-top: 20px;
        font-size: 1.2em;
    }

    .cv-actions {
        margin-top: 20px;
    }

    .btn {
        margin-right: 10px;
    }
</style>