@model CVProjectsViewModel

<h1>@((Model.IsOwnCV ? "Ditt CV" : "Användarens CV"))</h1>

@if (Model != null && Model.CV != null)
{
        <div class="cv-card">
            <div class="cv-header">
                <h2>@Model.CV.FullName</h2>
                <p><strong>Adress:</strong> @Model.CV.Adress</p>
                <p><strong>Telefonnummer:</strong> @Model.CV.PhoneNumber</p>
            </div>
            <div class="cv-body">
                <div class="profile-image">
                @if (!string.IsNullOrEmpty(Model.CV.ProfileImagePath))
                {
                            <img src="@Model.CV.ProfileImagePath" alt="Profilbild" />
                }
                else
                {
                            <p>Ingen bild</p>
                }
                </div>
                <div class="cv-sections">
                    <div class="cv-education">
                        <h3>Utbildning</h3>
                        <ul>
                        @foreach (var edu in Model.CV.Educations)
                        {
                                    <li>@edu.Name</li>
                        }
                        </ul>
                    </div>
                    <div class="cv-experience">
                        <h3>Erfarenhet</h3>
                        <ul>
                        @foreach (var exp in Model.CV.Experiences)
                        {
                                    <li>@exp.JobTitle</li>
                        }
                        </ul>
                    </div>
                    <div class="cv-skills">
                        <h3>Kompetens</h3>
                        <ul>
                        @foreach (var skill in Model.CV.Skills)
                        {
                                    <li>@skill.Name</li>
                        }
                        </ul>
                    </div>
                </div>
            </div>
            <h3>Projekt</h3>
        @if (Model.Projects.Any())
        {
                    <ul>
                @foreach (var project in Model.Projects)
                {
                                <li>
                                    <strong>@project.Title</strong>: @project.Description
                                </li>
                }
                    </ul>
        }
        else
        {
                    <p>Inga projekt hittades för denna användare.</p>
        }

        @if (Model.IsOwnCV) //Visar knappar för att göra ändringar/ta bort om det är inloggade användarens CV
        {
                    <div class="cv-actions">
                        <a href="@Url.Action("Edit", "CV", new { id = Model.CV.Id })" class="btn btn-warning">Redigera</a>
                        <a href="@Url.Action("Delete", "CV", new { id = Model.CV.Id })" class="btn btn-danger">Ta bort</a>
                    </div>
        }
        else
        {
                    <div class="cv-actions">
                        <a asp-action="CreateMessage" asp-controller="Message" asp-route-receiverId="@Model.CV.UserId" class="btn btn-primary">Skicka meddelande</a>
                    </div>
        }
        </div>
}
else
{
        <p>Du har inget CV än. <a href="@Url.Action("Create", "CV")" class="btn btn-primary">Skapa ett CV</a></p>
}

<style>
    .cv-list {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .cv-card {
        background: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        width: 100%;
        max-width: 600px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .cv-header h2 {
        margin: 0 0 10px;
    }

    .cv-header p {
        margin: 5px 0;
    }

    .profile-image img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 50%;
    }

    .cv-sections h3 {
        margin-top: 20px;
        font-size: 1.2em;
    }

    .cv-actions {
        margin-top: 20px;
    }

    .btn {
        margin-right: 10px;
    }
</style>